# BrightSteps web app local environment template
# Copy to: apps/web/.env.local

# Runtime environment
NODE_ENV=development
LOG_LEVEL=info

# Local SQLite database + uploads (relative to repo root when running pnpm scripts)
BRIGHTSTEPS_DB_PATH=./data/db/brightsteps.sqlite
BRIGHTSTEPS_UPLOAD_DIR=./data/uploads

# Primary/fallback AI provider routing
AI_PRIMARY_PROVIDER=openai
AI_FALLBACK_PROVIDER=gemini

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL_PICTUREPHRASES=gpt-5-mini
OPENAI_MODEL_LEARN_TEXT=gpt-5-mini
OPENAI_MODEL_LEARN_TTS=gpt-4o-mini-tts
OPENAI_VOICE_LEARN=alloy
OPENAI_MODERATION_MODEL=omni-moderation-latest
OPENAI_TIMEOUT_MS=30000

# Gemini fallback
GEMINI_API_KEY=
GEMINI_MODEL_PICTUREPHRASES=gemini-2.5-flash
GEMINI_MODEL_LEARN_TEXT=gemini-2.5-flash
GEMINI_TIMEOUT_MS=30000

# PicturePhrases generation tuning
PICTUREPHRASES_SENTENCE_COUNT=5
PICTUREPHRASES_MAX_OUTPUT_TOKENS=1200
PICTUREPHRASES_TEMPERATURE=0.4

# Learn mode generation tuning
LEARN_MAX_OUTPUT_TOKENS=700
LEARN_TEMPERATURE=0.3
LEARN_AUDIO_ENABLED=true

# Upload + validation limits
UPLOAD_MAX_IMAGE_MB=8
UPLOAD_ALLOWED_IMAGE_MIME=image/*
